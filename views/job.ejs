                <form action="/job/create" method="post">
                    <h2>Job Alert</h2>

                    <div class="container">
                        <div class="item1">
                            <label for="position">Position name</label>
                            <input type="text" name="position" id="position" placeholder="Enter Position" required>
                            
                            <label for="deadline">Application deadline</label>
                            <input type="date" name="deadline" id="deadline">

                            <label for="location">Job Location</label>
                            <input type="text" name="location" id="location" placeholder="Enter Location" required>

                            <label for="employer">Employer</label>
                            <input type="text" name="employer" id="employer" placeholder="Enter Company/Employer name" required>
                            
                            <label for="description">Description</label>
                            <textarea name="description" id="description" placeholder="Enter Description of job position"></textarea>

